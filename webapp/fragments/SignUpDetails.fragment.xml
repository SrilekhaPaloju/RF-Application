<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="dialog"
        resizable="false"
        draggable="true"
        contentWidth="30%"
        title="Register Your Details:"
    >
        <customHeader>
            <Bar id="_IDBar1">
                <contentMiddle>
                    <Title
                        id="_IDTitle1"
                        text="Register Your Details:"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="_IDButton1"
                        icon="sap-icon://decline"
                        press="onCloseRegisterDialog"
                        tooltip="Close"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <beginButton>
            <Button
                id="idRegisterUserButton"
                text="Submit"
                press="onSubmitPress"
                class="onSubmitBtnFromFragment"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelRegisterUserButton"
                text="Clear"
                press="onClearRegisterDialog"
                class="onCancelRegisterBtn"
            />
        </endButton>

        <content>
            <form:SimpleForm
                id="idRegisterUserDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idLableEmployeeID"
                    text="Employee ID "
                    required="true"
                />
                <Input
                    id="idEmployeeIDInput"
                    value="{}"
                    placeholder="ex:name or 11187"
                    required="true"
                />
                <Label
                    id="idLableResourceName"
                    text="Resource Name"
                    required="true"
                />
                <Input
                    id="idResourceNameInput"
                    value="{}"
                    placeholder="Enter your Name.."
                    required="true"
                />

                <Label
                    id="idLableRoesurcetype"
                    text="Resource Type"
                    required="true"
                />
                <ComboBox id="idRoesurcetypeInput">
                    <core:Item
                        id="_IDGenItemPermanentEmployee"
                        key="PermanentEmployee"
                        text="Permanent Employee"
                    />

                    <core:Item
                        id="_IDGenItemtemporaryemployee"
                        key="temporaryemployee"
                        text="temporary Employee"
                    />
                </ComboBox>
                <Label
                    id="idLabelArea"
                    text="Process Area"
                    required="true"
                />
                      <MultiComboBox
                    id="AreaSelect"
                    items="{path: '/AreaSet'}"
                    selectionChange="onCheckBoxSelect"
                >
                    <core:Item
                        class="dropdown"
                        id="_IDGenItem5"
                        key="{Processarea}"
                        text="{Processarea}"
                    />
                </MultiComboBox>
                <Label
                    id="idLableGroup"
                    text="Group"
                    required="true"
                />
                <MultiComboBox
                    id="GroupSelect"
                    items="{path: '/AreaSet'}"
                    visible="false"
                >
                    <core:Item
                        class="dropdown"
                        id="_IDGenItem4"
                        key="{Processgroup}"
                        text="{Processgroup}"
                    />
                </MultiComboBox>
                <Label
                    id="idLableEmail"
                    text="Email"
                />
                <Input
                    id="idInputEmail"
                    value="{}"
                    placeholder="Enter Email.."
                    editable="true"
                />
                <Label
                    id="idLablePhoneNumber"
                    text="Phone Number"
                />
                <Input
                    id="idInputPhoneNumber"
                    value="{}"
                    placeholder="Enter Phone Number.."
                    editable="true"
                    required="true"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
